<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".menu.StatusFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/stausImageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile_icon_transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMyStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="My Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stausImageview"
        app:layout_constraintTop_toTopOf="@+id/stausImageview" />

    <TextView
        android:id="@+id/statustDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Tap to add status update"
        app:layout_constraintEnd_toEndOf="@+id/tvMyStatus"
        app:layout_constraintStart_toEndOf="@+id/stausImageview"
        app:layout_constraintTop_toBottomOf="@+id/tvMyStatus" />

    <ImageButton
        android:id="@+id/ibStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/stausImageview"
        app:layout_constraintEnd_toEndOf="@+id/stausImageview"
        app:srcCompat="@drawable/ic_add_circle" />

</androidx.constraintlayout.widget.ConstraintLayout>